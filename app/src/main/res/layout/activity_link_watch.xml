<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@drawable/welcome_screen_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/successfail_icon" />

        <EditText
            android:id="@+id/edit_watch_id"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="250dp"
            android:hint="@string/hint_enter_watch_id"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColorHint="@color/main_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_hint_watch_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit_watch_id"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="70dp"
            android:text="@string/hint_watch_id"
            android:textColor="@color/second_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_pair_watch"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/edit_watch_id"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/button_pair_watch"
            android:textColor="@color/button_text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/edit_watch_id"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:autoLink="web"
            android:clickable="true"
            android:text="@string/welcome_terms"
            android:textAlignment="center"
            android:textColor="@color/second_text_color"
            android:textColorLink="@color/main_text_color"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/progress_pair_watch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_watch_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:visibility="invisible" />
    </RelativeLayout>
</layout>