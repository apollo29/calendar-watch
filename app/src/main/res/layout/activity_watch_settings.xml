<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/dark_activity_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/settings_activity_toolbar_top" android:background="@color/toolbar_color" android:layout_width="match_parent" android:layout_height="@dimen/activity_toolbar_height">
        <ImageView android:id="@+id/toolbar_icon" android:padding="23dp" android:focusable="true" android:clickable="true" android:layout_width="75dp" android:layout_height="75dp" android:src="@drawable/ic_x_button" android:tint="#7d7fa0" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="@color/main_text_color" android:layout_gravity="center" android:id="@+id/toolbar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_title_my_watch" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ScrollView android:paddingBottom="@dimen/activity_vertical_margin" android:scrollbars="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/settings_activity_toolbar_top">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:id="@+id/flexible_button" android:background="@color/button_normal" android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                    <TextView android:textSize="15sp" android:textColor="@color/second_text_color" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/watch_settings_button_mode_flexible_title" android:textAllCaps="true"/>
                    <ImageView android:layout_gravity="center" android:id="@+id/flexible_circle" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:src="@drawable/mode_circle"/>
                    <TextView android:textSize="12sp" android:textColor="@color/main_text_color" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/watch_settings_button_mode_flexible_desc" android:paddingStart="12dp" android:paddingEnd="12dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/fixed_button" android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                    <TextView android:textSize="15sp" android:textColor="@color/second_text_color" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/watch_settings_button_mode_fixed_title" android:textAllCaps="true"/>
                    <ImageView android:layout_gravity="center" android:id="@+id/fixed_circle" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:src="@drawable/mode_circle"/>
                    <TextView android:textSize="12sp" android:textColor="@color/main_text_color" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/watch_settings_button_mode_fixed_desc" android:paddingStart="12dp" android:paddingEnd="12dp"/>
                </LinearLayout>
            </LinearLayout>
            <View android:id="@+id/shadow_divider" android:background="@drawable/swith_mode_shadow" android:layout_width="match_parent" android:layout_height="@dimen/fragment_shadow_size"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/layout_watch_settings" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:id="@+id/button_calibrate_watch" android:background="?android:attr/selectableItemBackground" android:paddingTop="12dp" android:paddingBottom="12dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:background="@null" android:padding="6dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_set_time" android:layout_marginStart="15dp"/>
                    <TextView android:textSize="15sp" android:textColor="@color/second_text_color" android:gravity="center_vertical" android:background="@null" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/watch_settings_button_set_time" android:textAllCaps="true" android:paddingStart="10dp" android:paddingEnd="10dp"/>
                </LinearLayout>
                <View android:background="@drawable/divider" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/button_manual_sync" android:background="?android:attr/selectableItemBackground" android:paddingTop="12dp" android:paddingBottom="12dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:background="@null" android:padding="6dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_manual_sync" android:layout_marginStart="15dp"/>
                    <TextView android:textSize="15sp" android:textColor="@color/second_text_color" android:gravity="center_vertical" android:background="@null" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/watch_settings_button_manual_sync" android:textAllCaps="true" android:paddingStart="10dp" android:paddingEnd="10dp"/>
                </LinearLayout>
                <View android:background="@drawable/divider" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <RelativeLayout android:id="@+id/button_calendars" android:background="?android:attr/selectableItemBackground" android:paddingTop="12dp" android:paddingBottom="12dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/image_calendars" android:background="@null" android:padding="6dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_calendars" android:layout_marginStart="15dp"/>
                    <ImageView android:id="@+id/calendars_arrow" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/arrow_right" android:tint="@color/info_button_text_color" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
                    <TextView android:textSize="15sp" android:textColor="@color/second_text_color" android:gravity="center_vertical" android:background="@null" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/watch_settings_button_calendars" android:textAllCaps="true" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_toStartOf="@+id/calendars_arrow" android:layout_toEndOf="@+id/image_calendars"/>
                </RelativeLayout>
                <View android:background="@drawable/divider" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <RelativeLayout android:orientation="horizontal" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/image_allday" android:background="@null" android:padding="6dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_all_day_events" android:layout_marginStart="15dp"/>
                    <Switch android:id="@+id/switch_allday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
                    <TextView android:textSize="15sp" android:textColor="@color/second_text_color" android:gravity="center_vertical" android:background="@null" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/watch_settings_button_allday_events" android:textAllCaps="true" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_toStartOf="@+id/switch_allday" android:layout_toEndOf="@+id/image_allday"/>
                </RelativeLayout>
                <View android:background="@drawable/divider" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <RelativeLayout android:orientation="horizontal" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/image_vibrate" android:background="@null" android:padding="6dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_vibrate" android:layout_marginStart="15dp"/>
                    <Switch android:id="@+id/switch_vibrate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
                    <TextView android:textSize="15sp" android:textColor="@color/second_text_color" android:gravity="center_vertical" android:background="@null" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/watch_settings_button_vibrate_alert" android:textAllCaps="true" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_toStartOf="@+id/switch_vibrate" android:layout_toEndOf="@+id/image_vibrate"/>
                </RelativeLayout>
                <View android:background="@drawable/divider" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <RelativeLayout android:orientation="horizontal" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/image_airplane" android:background="@null" android:padding="6dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_flight_mode" android:layout_marginStart="15dp"/>
                    <Switch android:id="@+id/switch_airplane" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
                    <TextView android:textSize="15sp" android:textColor="@color/second_text_color" android:gravity="center_vertical" android:background="@null" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/watch_settings_button_airplane_mode" android:textAllCaps="true" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_toStartOf="@+id/switch_airplane" android:layout_toEndOf="@+id/image_airplane"/>
                </RelativeLayout>
                <View android:background="@drawable/divider" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/button_reset" android:background="?android:attr/selectableItemBackground" android:paddingTop="12dp" android:paddingBottom="12dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:background="@null" android:padding="6dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_reset" android:layout_marginStart="15dp"/>
                    <TextView android:textSize="15sp" android:textColor="@color/second_text_color" android:gravity="center_vertical" android:background="@null" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/watch_settings_button_reset_watch" android:textAllCaps="true" android:paddingStart="10dp" android:paddingEnd="10dp"/>
                </LinearLayout>
                <View android:background="@drawable/divider" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/button_forget" android:background="?android:attr/selectableItemBackground" android:paddingTop="12dp" android:paddingBottom="12dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                    <ImageView android:background="@null" android:padding="6dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_forget" android:layout_marginStart="15dp"/>
                    <TextView android:textSize="15sp" android:textColor="@color/second_text_color" android:gravity="center_vertical" android:background="@null" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/watch_settings_button_forget" android:textAllCaps="true" android:paddingStart="10dp" android:paddingEnd="10dp"/>
                </LinearLayout>
                <View android:background="@drawable/divider" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
