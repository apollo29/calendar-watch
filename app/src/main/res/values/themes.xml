<resources>
    <!-- Base application theme. -->
    <style name="Theme.CalendarWatch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_background_start</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <!--<item name="android:windowBackground">@color/main_background</item>-->

        <item name="android:textColor">@color/main_text_color</item>

        <!-- Toolbar / Top App Bar -->
        <item name="toolbarStyle">@style/Theme.CalendarWatch.TopAppBar</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/Theme.CalendarWatch.TextAppearance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/Theme.CalendarWatch.TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/Theme.CalendarWatch.TextAppearance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/Theme.CalendarWatch.TextAppearance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/Theme.CalendarWatch.TextAppearance.Headline5</item>
        <item name="textAppearanceHeadline6">@style/Theme.CalendarWatch.TextAppearance.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/Theme.CalendarWatch.TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Theme.CalendarWatch.TextAppearance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/Theme.CalendarWatch.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/Theme.CalendarWatch.TextAppearance.Body2</item>
        <item name="textAppearanceButton">@style/Theme.CalendarWatch.TextAppearance.Button</item>
        <item name="textAppearanceCaption">@style/Theme.CalendarWatch.TextAppearance.Caption</item>
        <item name="textAppearanceOverline">@style/Theme.CalendarWatch.TextAppearance.Overline</item>

        <!-- Custom Typography -->
        <item name="chargingTextStyle">@style/Theme.CalendarWatch.Custom.TextAppearance.Charging</item>

        <!-- Buttons -->
        <item name="buttonStyle">@style/Theme.CalendarWatch.Button</item>
        <item name="materialButtonStyle">@style/Theme.CalendarWatch.Button</item>
        <item name="materialButtonTextStyle">@style/Theme.CalendarWatch.TextButton</item>

    </style>

    <!--
    #Top App Bar
    -->
    <style name="Theme.CalendarWatch.TopAppBar" parent="Theme.MaterialComponents.DayNight">
        <item name="android:elevation">0dp</item>

        <item name="android:background">@color/toolbar_color</item>
        <item name="android:textColorSecondary">@color/main_text_color</item>
        <item name="android:tint">@color/main_text_color</item>
        <item name="iconTint">@color/main_text_color</item>
        <item name="actionMenuTextColor">@color/main_text_color</item>
        <item name="titleTextAppearance">@style/Theme.CalendarWatch.TopAppBar.TitleTextStyle</item>
        <item name="titleTextColor">@color/main_text_color</item>
        <item name="color">@color/main_text_color</item>
        <!-- Title text gravity -->
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.CalendarWatch.TopAppBar.TitleTextStyle" parent="@style/Theme.CalendarWatch.TextAppearance.Headline6">
        <item name="android:textFontWeight">500</item>
        <item name="color">@color/main_text_color</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--
    #Buttons

    ##Contained Buttons
    -->
    <style name="Theme.CalendarWatch.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colors_button_normal</item>
        <item name="iconTint">@color/main_text_color</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <!--
    ##Text Buttons
    -->
    <style name="Theme.CalendarWatch.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/main_text_color</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="backgroundTint">@color/colors_button_normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <!--
    #Custom Typography

    ##Charging Text Style
    -->
    <style name="Theme.CalendarWatch.Custom.TextAppearance.Charging" parent="Theme.CalendarWatch.TextAppearance.Headline6">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/battery_level_text_color</item>
        <item name="android:textFontWeight">200</item>
    </style>
</resources>