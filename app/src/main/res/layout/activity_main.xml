<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/main_screen_background" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/logo" android:layout_width="150dp" android:layout_height="50dp" android:layout_marginTop="25dp" android:src="@drawable/logo" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/text_logo" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="-10dp" android:src="@drawable/product_name" android:layout_below="@+id/logo" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="14dp" android:id="@+id/text_watch_id" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:text="New Text" android:layout_below="@+id/logo" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/button_info" android:padding="4dp" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:src="@drawable/ic_info" android:layout_alignParentRight="true"/>
    <com.whatcalendar.view.BatteryLevelView android:id="@+id/view_battery_level" android:layout_width="@dimen/battery_level_view_size" android:layout_height="@dimen/battery_level_view_size" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    <RelativeLayout android:id="@+id/layout_charging" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
        <ImageView android:id="@+id/image_charging" android:background="@null" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/charging" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="22sp" android:textColor="@color/battery_level_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/watch_charging_text" android:layout_below="@+id/image_charging" android:layout_centerHorizontal="true" android:textAllCaps="true" android:fontFamily="sans-serif-thin"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/button_my_watch" android:paddingBottom="15dp" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentStart="true">
        <ImageView android:id="@+id/image_my_watch" android:background="@null" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/watch_swipe_icon" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
