<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/welcome_screen_background" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/imageView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/successfail_icon" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="26sp" android:textColor="@color/main_text_color" android:id="@+id/result_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="220dp" android:text="@string/successful" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
    <Button android:id="@+id/result_button" android:layout_width="140dp" android:layout_height="50dp" android:layout_marginTop="20dp" android:text="@android:string/ok" android:layout_below="@+id/result_hint" android:layout_centerHorizontal="true"/>
    <TextView android:textColor="@color/second_text_color" android:id="@+id/result_hint" android:paddingTop="5dp" android:paddingBottom="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="New Text" android:layout_below="@+id/result_text" android:layout_centerHorizontal="true"/>
</RelativeLayout>
