<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_starting_viewpager_size"
    android:background="@color/fragment_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="@string/connect_your_watch" />

    <LinearLayout
        android:id="@+id/first_pair_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/bluetooth_settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:autoLink="web"
            android:clickable="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/connect_your_watch_text"
            android:textColorLink="@color/main_text_color" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="244dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:src="@drawable/getting_started_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="@string/connect_your_watch_press" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_pair_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:autoLink="email"
            android:linksClickable="true"
            android:text="@string/connect_your_watch_text_second"
            android:textColorLink="@color/main_text_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="18dp"
            android:paddingRight="16dp"
            android:paddingBottom="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mac_address"
                android:textColor="@color/main_text_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_watch_id"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColorHint="@color/main_text_color"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
